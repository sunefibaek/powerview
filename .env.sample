# Eloverblik API Configuration
# Copy this file to .env and fill in your values

# Required: Eloverblik API refresh token
ELOVERBLIK_REFRESH_TOKEN=your_refresh_token_here

# Optional: Metering Point IDs (at least one required)
# Leave blank to skip a metering point
# Change the names according to preference (No, my espresso machine does not have its own meter)
SOLAR_PANELS_ID=
ELECTRICAL_HEATING_ID=
MAIN_METER_ID=
CAR_CHARGER=
ESPRESSO_MACHINE=
BASEMENT=

# Optional: Storage and State Configuration (defaults shown)
DATA_STORAGE_PATH=./data
STATE_DB_PATH=./state.duckdb

# Optional: Logging level (INFO, DEBUG, WARNING)
LOG_LEVEL=INFO

# Optional: Initial backfill period in days (default: 1095 = 3 years)
INITIAL_BACKFILL_DAYS=1095
